<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/primary_light</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textSize">20sp</item>
        <item name="colorAccent">@color/color_dialog_buttons</item>    <!-- Used for the buttons -->
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:background">@color/primary_dark</item>
    </style>

    <style name="app_title_text" parent="AppTheme">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="choose_test_list_name" parent="AppTheme">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="list_chooser_grade" parent="choose_test_list_name">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="my_material_drawer_header" parent="AppTheme">
        <item name="android:textColor">@color/primary_blue_text</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
