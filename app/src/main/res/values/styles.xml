<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/primaryColor</item>

        <item name="android:textColorSecondary">@color/secondaryTextColor</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:dialogTheme">@style/MyAlertDialogStyle</item>

        <item name="md_background_color">@color/primaryColor</item>  <!-- these are for setting dialog colors, see here for more attributes -->
        <item name="md_title_color">@color/primaryTextColor</item>  <!--https://github.com/afollestad/material-dialogs#theming-->
        <item name="md_content_color">@color/primaryTextColor</item>
        <item name="md_positive_color">@color/primaryTextColor</item>
        <item name="md_neutral_color">@color/primaryTextColor</item>
        <item name="md_negative_color">@color/primaryTextColor</item>

    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textSize">20sp</item>
        <item name="colorAccent">@color/secondaryColor</item>    <!-- Used for the buttons -->
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:background">@color/primaryColor</item>
    </style>

    <style name="app_title_text" parent="AppTheme">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="choose_test_list_name" parent="AppTheme">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="list_chooser_grade" parent="choose_test_list_name">
        <item name="android:textColor">@color/secondaryColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="my_material_drawer_header" parent="AppTheme">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
